generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql" // Define qual o banco de dados estamos usando
  url       = env("DATABASE_URL") // fazer conexão com o banco de dados
  directUrl = env("DIRECT_URL") 
}


model Usuario {
  id        Int      @id @default(autoincrement()) // Chave primária
  nome      String
  email     String   @unique                      // Email único
  servicos  Servico[] // Relacionamento 1:N com Serviços
  localizacaoId   Int
  localizacao     Localizacao  @relation(fields: [localizacaoId], references: [id])
  criadoEm  DateTime @default(now())
}

// Tabela Localização
model Localizacao {
  id        Int      @id @default(autoincrement()) // Chave primária
  numero    String
  bairro    String
  cidade    String
  estado    String
  usuario   Usuario[]
  criadoEm  DateTime @default(now())
}

// Tabela Serviços
model Servico {
  id              Int           @id @default(autoincrement()) // Chave primária
  nomeMarca            String
  // preco           Float
  descricao       String
  telefone        String
  categoriaId     Int           // Relacionamento com categoria
  categoria       Categoria  @relation(fields: [categoriaId], references: [id])
  usuarioId       Int           // Relacionamento com usuario
  usuario         Usuario @relation(fields: [usuarioId], references: [id])
  criadoEm        DateTime      @default(now())
}



// Tabela Cadastro

model Categoria{
  id            Int           @id @default(autoincrement()) // Chave primária
  nome          String   @unique
  servico       Servico[]
  criadoEm      DateTime      @default(now())
  atualizadoEm  DateTime @updatedAt
}

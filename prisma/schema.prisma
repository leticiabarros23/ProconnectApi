generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model paciente{ 
  id                      Int      @id @default(autoincrement())
  nome                    String  
  dataNascimento          String
  genero                  String
  telefone                Int
  email                   String
  senha                   String
}

model locais {
  id                      Int      @id @default(autoincrement())
  nome                    String
  endereco                String
  telefone                Int
  procedimentos procedimentos[]
  profissionais profissionais[]
}

model procedimentos{
  id                      Int      @id @default(autoincrement())
  nome                    String
  descricao               String
  duracao                 String
  locais locais[]
  profissionais profissionais[]
}

model profissionais{
  id                      Int      @id @default(autoincrement())
nome                      String
especialidade             String
procedimentos procedimentos[]
locais locais[]
}

model agendamento{
  id                      Int      @id @default(autoincrement())
  data                    DateTime
  hora                    DateTime
  descricao               String

}

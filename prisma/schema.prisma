generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql" // Define qual o banco de dados estamos usando
  url       = env("DATABASE_URL") // fazer conexão com o banco de dados
  directUrl = env("DIRECT_URL") 
}


model Profissional {
  id        Int      @id @default(autoincrement()) // Chave primária
  nome      String
  email     String   @unique                      // Email único
  telefone  String
  linkedin  String?
  instagram String?
  servicos  Servico[] // Relacionamento 1:N com Serviços
  criadoEm  DateTime @default(now())
}

// Tabela Localização
model Localizacao {
  id        Int      @id @default(autoincrement()) // Chave primária
  numero    String
  bairro    String
  cidade    String
  criadoEm  DateTime @default(now())
}

// Tabela Serviços
model Servico {
  id              Int           @id @default(autoincrement()) // Chave primária
  nome            String
  preco           Float
  categoria       String
  descricao       String
  profissionalId  Int           // Relacionamento com Profissional
  profissional    Profissional  @relation(fields: [profissionalId], references: [id])
  criadoEm        DateTime      @default(now())
}